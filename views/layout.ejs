<html>
    <head>
        <title>
            <%= title %>
        </title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        
        <link rel="stylesheet" href="/css/layout.css"> <!-- in href it is automatically looking into assets folder as we use static in index.js-->
        <link rel="stylesheet" href="/css/header.css">
        <link rel="stylesheet" href="/css/footer.css">
        <%- style %>
    </head>
    <body>
        <%- include('_header'); -%>

        <!-- Accessing flash messages that we have created without using noty-->
        <!-- <% if (flash.success && flash.success.length>0) { %> 
            <h5 style="margin-top:3%">
                <%= flash.success %>
            </h5>
        <% } %> -->

        <main id="layout-main">
            <div style="margin-top: 2.5vw;">
                <%- body -%>
            </div>
        </main>
        
        

        <%- include('_footer'); -%>

        <%- script %>

        <script>
            <% if (flash.success && flash.success.length>0) { %> 
                new Noty({
                    theme: 'relax',
                    text: '<%= flash.success %>',
                    type: 'success',
                    layout: 'topRight',
                    timeout: 1500
                }).show();
            <% } %>

            <% if (flash.error && flash.error.length>0) { %> 
                new Noty({
                    theme: 'relax',
                    text: '<%= flash.error %>',
                    type: 'error',
                    layout: 'topRight',
                    timeout: 1500
                }).show();
            <% } %>
        </script>
    </body>
</html>